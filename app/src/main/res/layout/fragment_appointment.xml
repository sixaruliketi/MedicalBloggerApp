<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".appointment.AppointmentFragment">

    <TextView
        android:id="@+id/addAppointmentText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="19sp"
        android:fontFamily="serif-monospace"
        android:textAlignment="center"
        android:layout_marginEnd="10dp"
        android:drawablePadding="10dp"
        android:textColor="@color/black"
        android:text="click\nto make\nan appointment"
        app:layout_constraintTop_toTopOf="@id/addAppointmentClickButton"
        app:layout_constraintEnd_toStartOf="@id/addAppointmentClickButton"
        app:layout_constraintBottom_toBottomOf="@+id/addAppointmentClickButton"
        app:drawableEndCompat="@drawable/ic_baseline_arrow_right_alt_24" />

    <ImageView
        android:id="@+id/addAppointmentClickButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_add_box"
        android:layout_margin="30dp"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:id="@+id/symptomsEditText"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#39373737"
        android:padding="15dp"
        android:gravity="start"
        android:textAlignment="textStart"
        android:hint="what are your symptoms?"
        android:fontFamily="monospace"
        android:layout_marginHorizontal="5dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/addAppointmentText"/>


</androidx.constraintlayout.widget.ConstraintLayout>